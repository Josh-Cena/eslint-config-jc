{
  "name": "root",
  "private": true,
  "license": "MIT",
  "workspaces": [
    "packages/*",
    "website"
  ],
  "scripts": {
    "format": "prettier -w .",
    "lint": "eslint .",
    "spellcheck": "cspell \"**\" --no-progress",
    "prepare": "husky install",
    "build": "yarn workspaces foreach --no-private -t -v run build",
    "publish": "yarn workspaces foreach --no-private npm publish"
  },
  "devDependencies": {
    "cspell": "^8.7.0",
    "eslint": "^8.57.0",
    "husky": "^8.0.3",
    "lint-staged": "^15.2.2",
    "prettier": "^3.2.5",
    "typescript": "~5.4.5"
  },
  "packageManager": "yarn@4.1.1"
}
